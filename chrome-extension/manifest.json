{
  "name": "Adaptive Learner Side Panel",
  "description": "Drag learning content into a side panel to summarize or ask questions.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Adaptive Learner"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "permissions": ["sidePanel", "storage", "activeTab"],
  "host_permissions": ["http://localhost:3000/*", "http://127.0.0.1:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
